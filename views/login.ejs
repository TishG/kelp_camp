<% include partials/navbar %>

<a href="/" class="btn btn-secondary btn-sm m-3">Return Home</a>
<main class="container col-10 col-md-7 col-lg-5 p-3">
    <h1 class="text-center pb-4">Login</h1>

    <form action="/login" method="POST">
        <section class="form-group">
            <label for="username">Username:</label>
            <input id="username" type="text" aria-placeholder="Enter a username" placeholder="Enter a username" name="username" class="form-control">
        </section>

        <section class="form-group">
            <label for="password">Password:</label>
            <input id="password" type="password" aria-placeholder="Enter a password" placeholder="Enter a password" name="password" class="form-control">
        </section>
        
        <section class="d-flex flex-column">
            <button class="btn btn-primary">Submit</button>
        </section>
    </form>
</main>

