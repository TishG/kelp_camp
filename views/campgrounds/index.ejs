<% include ../partials/header %>
<main class="container p-3">
    <header class="jumbotron">
        <section class="text-center">
            <h1>Welcome to KelpCamp</h1>
            <p>The #1 site for campgrounds</p>
            <p>
                <a class="btn btn-primary btn-md" href="/campgrounds/new/">Add a new campground</a>
            </p>

            <section class="d-flex justify-content-center">
            <form action="/campgrounds" method="GET" class="form-inline">
                <section class="form-group">
                    <label class="mr-1" for="search">Find:</label>
                    <input id="search" type="text" aria-placeholder="Search a campground..." placeholder="Search a campground..." name="search" class="form-control">
                </section>
                <button class="btn btn-default"><span class="fas fa-search"></span></button>
            </form>
            </section>

        </section>
    </header>
    <section class="row">
        <% if(noMatch) { %>
            <section class="col-md-12">
                <h5 class="text-center"><%= noMatch %></h5>
            </section>
        <% } %>
            <% campgrounds.map(campground => { %>
                <section class="col-sm-6 col-lg-4 pb-4">
                    <section class="card p-1 text-center">
                        <img src="<%= campground.image %>" alt="Campground Image" class="card-img-top img-fluid">
                        <section class="card-body">
                            <h3 class="card-title"><%= campground.name %></h3>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-info">More Info</a>
                        </section>
                    </section>
                </section>
            <% }) %>
    </section>
</main>

<% include ../partials/footer %>
